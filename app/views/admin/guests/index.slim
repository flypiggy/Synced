= render 'shared/admin_loader'

.breadcrumbs-container.row
  .col.s6
    h5.breadcrumbs-title 嘉宾管理
    ol.breadcrumbs-list
      li
        a href="#!" HOME
      li
        a href="#!" 元信息管理
      li
        span 嘉宾管理
  .col.s6
    .btns
      a.waves-effect.waves-light.btn.teal.accent-4 href='#new_guest_model'
        | 添加嘉宾
.wrapper-content
  table.striped.centered
    thead
      tr
        th 姓名
        th 公司
        th 职位
        th 操作
    tbody#guests_table_body
      - @guests.each do |guest|
        =render partial: 'row', locals: { guest: guest }

= paginate @guests

.modal.modal#new_guest_model
  = render partial: 'form', locals: { guest: @guest }
